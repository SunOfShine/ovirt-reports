	<queryString>
		<![CDATA[select  the_date, host_id, coalesce(host_name,max(host_name) over (partition by 1),'') as host_name, CPU_Peak, MEM_Peak
from	(-- Hosts CPU and MEMory Usage Peaks
		SELECT
			v3_0_host_daily_history_view.host_id,
			CASE
				WHEN delete_date IS NULL THEN host_name
				ELSE host_name || ' (Removed on ' || cast(cast(delete_date as date) as varchar) || ')'
			END as host_name,
			v3_0_host_daily_history_view.history_datetime AS time,
			MAX(coalesce(max_cpu_usage,0)) AS CPU_Peak,
			MAX(coalesce(max_memory_usage,0)) AS MEM_Peak
		FROM v3_0_host_daily_history_view
			INNER JOIN v3_0_host_configuration_view
  				ON (v3_0_host_configuration_view.host_id = v3_0_host_daily_history_view.host_id)
		WHERE
			$X{IN, cast(v3_0_host_daily_history_view.host_id as varchar), P_Host_ListID}
			AND history_datetime >= cast($P{P_Start_Date} as timestamp)
			AND history_datetime < cast($P{P_End_Date} as date) + interval '1 day'
			AND v3_0_host_configuration_view.history_id in (select max(a.history_id)
															From v3_0_host_configuration_view a
															WHERE v3_0_host_configuration_view.host_id = a.host_id)
		GROUP BY	v3_0_host_daily_history_view.host_id,
					CASE
						WHEN delete_date IS NULL THEN host_name
						ELSE host_name || ' (Removed on ' || cast(cast(delete_date as date) as varchar) || ')'
					END,
					v3_0_host_daily_history_view.history_datetime) a RIGHT OUTER JOIN calendar b on (time = the_date)
where the_date >= cast($P{P_Start_Date} as date)
      AND the_date < cast($P{P_End_Date} as date) + interval '1 day'
order by the_date]]>
	</queryString>
