    <variable name="var_name" class="java.lang.String" resetType="None" incrementType="Group" incrementGroup="hostname">
        <variableExpression><![CDATA[$V{var_name} == $F{host_name} + ", " ? null : $F{host_name} + ", "]]></variableExpression>
