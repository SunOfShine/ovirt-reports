    <queryString>
        <![CDATA[-- Hosts Average Usage Peaks
SELECT cluster_id,
       cluster_name,
       AVG(cpu_peak) AS avg_cpu_peak,
       AVG(mem_peak) AS avg_mem_peak
FROM (-- Calculation of samples cpu and memory usage peaks
      SELECT v3_0_latest_cluster_configuration_view.cluster_id,
             v3_0_latest_cluster_configuration_view.cluster_name,
             v3_0_latest_host_configuration_view.host_id,
             MAX(cpu_usage_percent) as cpu_peak,
             MAX(memory_usage_percent) as mem_peak
      FROM v3_0_host_samples_history_view
          INNER JOIN v3_0_latest_host_configuration_view
              ON (v3_0_latest_host_configuration_view.host_id = v3_0_host_samples_history_view.host_id)
                 INNER JOIN v3_0_latest_cluster_configuration_view
                     ON (v3_0_latest_host_configuration_view.cluster_id = v3_0_latest_cluster_configuration_view.cluster_id)
      WHERE v3_0_latest_cluster_configuration_view.datacenter_id = cast($P{P_DataCenter_ID} as UUID)
      GROUP BY v3_0_latest_cluster_configuration_view.cluster_id,
               v3_0_latest_cluster_configuration_view.cluster_name,
               v3_0_latest_host_configuration_view.host_id,
               date_part('hour', v3_0_host_samples_history_view.history_datetime)) AS TBL_samples_PEAKS
GROUP BY cluster_id, cluster_name]]>
    </queryString>
