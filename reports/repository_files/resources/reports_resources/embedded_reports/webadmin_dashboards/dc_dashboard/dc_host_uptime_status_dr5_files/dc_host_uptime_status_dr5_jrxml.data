    <property name="ireport.jasperserver.reportUnit" value="/reports_resources/embedded_reports/webadmin_dashboards/dc_dashboard/dc_host_uptime_status_dr5"/>
    <property name="ireport.jasperserver.url" value="http://localhost:8080/jasperserver-pro/services/repository"/>
    <parameter name="P_DataCenter_ID" class="java.lang.String">
        <defaultValueExpression><![CDATA[]]></defaultValueExpression>
    </parameter>
    <queryString>
        <![CDATA[SELECT (SUM(CASE WHEN v3_0_host_samples_history_view.host_status = 1 THEN coalesce(v3_0_host_samples_history_view.minutes_in_status,0) ELSE 0 END) / SUM(v3_0_host_samples_history_view.minutes_in_status)) * 100 as uptime_mins_percent
FROM v3_0_host_samples_history_view
     INNER JOIN v3_0_latest_host_configuration_view ON (v3_0_latest_host_configuration_view.host_id = v3_0_host_samples_history_view.host_id)
                INNER JOIN v3_0_latest_cluster_configuration_view ON (v3_0_latest_host_configuration_view.cluster_id = v3_0_latest_cluster_configuration_view.cluster_id)
WHERE v3_0_latest_cluster_configuration_view.datacenter_id = CAST($P{P_DataCenter_ID} as UUID)]]>
    </queryString>
    <field name="uptime_mins_percent" class="java.math.BigDecimal"/>
