    <property name="ireport.jasperserver.url" value="http://localhost:8080/jasperserver/services/repository"/>
    <parameter name="P_Cluster_ID" class="java.lang.String">
        <defaultValueExpression><![CDATA[]]></defaultValueExpression>
    </parameter>
    <queryString>
        <![CDATA[SELECT v3_0_latest_host_configuration_view.host_id, v3_0_latest_host_configuration_view.host_name,
       (SUM(CASE WHEN v3_0_host_samples_history_view.host_status = 1 THEN coalesce(v3_0_host_samples_history_view.minutes_in_status,0) ELSE 0 END) / SUM(v3_0_host_samples_history_view.minutes_in_status)) * 100 as uptime_percent,
       (SUM(CASE WHEN v3_0_host_samples_history_view.host_status = 2 THEN coalesce(v3_0_host_samples_history_view.minutes_in_status,0) ELSE 0 END) / SUM(v3_0_host_samples_history_view.minutes_in_status)) * 100 AS planned_downtime_percent,
       (SUM(CASE WHEN v3_0_host_samples_history_view.host_status = 3 THEN coalesce(v3_0_host_samples_history_view.minutes_in_status,0) ELSE 0 END) / SUM(v3_0_host_samples_history_view.minutes_in_status)) * 100 AS unplanned_downtime_percent
FROM v3_0_host_samples_history_view
     INNER JOIN v3_0_latest_host_configuration_view ON (v3_0_latest_host_configuration_view.host_id = v3_0_host_samples_history_view.host_id)
WHERE v3_0_latest_host_configuration_view.cluster_id = cast($P{P_Cluster_ID} as UUID)
GROUP BY v3_0_latest_host_configuration_view.host_id, v3_0_latest_host_configuration_view.host_name
HAVING (SUM(CASE WHEN v3_0_host_samples_history_view.host_status = 1 THEN coalesce(v3_0_host_samples_history_view.minutes_in_status,0) ELSE 0 END) / SUM(v3_0_host_samples_history_view.minutes_in_status)) * 100 != 100
ORDER BY unplanned_downtime_percent DESC, planned_downtime_percent DESC
LIMIT (SELECT CASE
                  WHEN count(distinct a.host_id) <= 5 THEN 0
                  WHEN count(distinct a.host_id) <= 10 THEN count(distinct a.host_id) - 5
                  ELSE 5
              END
       FROM v3_0_latest_host_configuration_view as a
       WHERE a.cluster_id = cast($P{P_Cluster_ID} as UUID))]]>
    </queryString>
