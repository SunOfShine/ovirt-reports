<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="cluster_host_uptime_status_dr6" language="groovy" pageWidth="534" pageHeight="35" columnWidth="534" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
    <property name="ireport.zoom" value="1.0"/>
    <property name="ireport.x" value="0"/>
    <property name="ireport.y" value="0"/>
    <property name="ireport.jasperserver.reportUnit" value="/Resources/embedded_reports/webadmin_dashboards/cluster_dashboard/cluster_host_uptime_status_dr6"/>
    <property name="ireport.jasperserver.url" value="http://localhost:8080/jasperserver/services/repository"/>
    <parameter name="P_Cluster_ID" class="java.lang.String">
        <defaultValueExpression><![CDATA[]]></defaultValueExpression>
    </parameter>
    <queryString>
        <![CDATA[SELECT (SUM(CASE WHEN v3_0_host_samples_history_view.host_status = 1 THEN coalesce(v3_0_host_samples_history_view.minutes_in_status,0) ELSE 0 END) / SUM(v3_0_host_samples_history_view.minutes_in_status)) * 100 as uptime_mins_percent
FROM v3_0_host_samples_history_view
     INNER JOIN v3_0_latest_host_configuration_view ON (v3_0_latest_host_configuration_view.host_id = v3_0_host_samples_history_view.host_id)
WHERE v3_0_latest_host_configuration_view.cluster_id = CAST($P{P_Cluster_ID} as UUID)]]>
    </queryString>
    <field name="uptime_mins_percent" class="java.math.BigDecimal"/>
    <summary>
        <band height="35" splitType="Stretch">
            <textField>
                <reportElement x="0" y="0" width="387" height="35" forecolor="#333333"/>
                <textElement verticalAlignment="Middle" markup="html">
                    <font fontName="DejaVu Sans" size="16"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA["<b>Hosts</b> Uptime Status:"]]></textFieldExpression>
            </textField>
            <image>
                <reportElement x="387" y="10" width="17" height="15">
                    <printWhenExpression><![CDATA[$F{uptime_mins_percent} == null || $F{uptime_mins_percent} >= 60]]></printWhenExpression>
                </reportElement>
                <imageExpression class="java.lang.String"><![CDATA["repo:/Resources/check-mark.jpg"]]></imageExpression>
            </image>
            <image>
                <reportElement x="387" y="10" width="17" height="15">
                    <printWhenExpression><![CDATA[$F{uptime_mins_percent} != null && $F{uptime_mins_percent} < 60]]></printWhenExpression>
                </reportElement>
                <imageExpression class="java.lang.String"><![CDATA["repo:/Resources/x-mark.jpg"]]></imageExpression>
            </image>
        </band>
    </summary>
</jasperReport>
